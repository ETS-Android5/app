<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/vortView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_background"/>

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/vectorsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_background"/>

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/baseView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_background"/>

    </FrameLayout>

    <Button
        android:id="@+id/firstPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="singlePassDisplay"
        android:backgroundTint="#243EDF"
        android:textColor="#FFFFFF"
        android:text="Single Pass" />

    <Button
        android:id="@+id/secondPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="multiPassDisplay"
        android:layout_below="@+id/firstPass"
        android:backgroundTint="#243EDF"
        android:textColor="#FFFFFF"
        android:text="Multiple Pass" />

</RelativeLayout>

