<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.jsibbold.zoomage.ZoomageView
        android:id="@+id/baseZoomageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background"
        app:zoomage_animateOnReset="true"
        app:zoomage_autoCenter="true"
        app:zoomage_autoResetMode="UNDER"
        app:zoomage_maxScale="8"
        app:zoomage_minScale="0.6"
        app:zoomage_restrictBounds="false"
        app:zoomage_translatable="true"
        app:zoomage_zoomable="true" />

    <com.jsibbold.zoomage.ZoomageView
        android:id="@+id/vortZoomageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background"
        app:zoomage_animateOnReset="true"
        app:zoomage_autoCenter="true"
        app:zoomage_autoResetMode="UNDER"
        app:zoomage_maxScale="8"
        app:zoomage_minScale="0.6"
        app:zoomage_restrictBounds="false"
        app:zoomage_translatable="true"
        app:zoomage_zoomable="true" />

    <com.jsibbold.zoomage.ZoomageView
        android:id="@+id/vectorsZoomageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background"
        app:zoomage_animateOnReset="true"
        app:zoomage_autoCenter="true"
        app:zoomage_autoResetMode="UNDER"
        app:zoomage_maxScale="8"
        app:zoomage_minScale="0.6"
        app:zoomage_restrictBounds="false"
        app:zoomage_translatable="true"
        app:zoomage_zoomable="true" />

    <Button
        android:id="@+id/firstPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#243EDF"
        android:onClick="singlePassDisplay"
        android:text="Single Pass"
        android:textColor="#FFFFFF" />

    <!--    <Button-->
    <!--        android:id="@+id/firstReplace"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginTop="10dp"-->
    <!--        android:onClick="singlePassReplaceDisplay"-->
    <!--        android:backgroundTint="#243EDF"-->
    <!--        android:textColor="#FFFFFF"-->
    <!--        android:layout_below="@+id/firstPass"-->
    <!--        android:text="Replacement After Single Pass" />-->

    <Button
        android:id="@+id/secondPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstPass"
        android:layout_marginTop="10dp"
        android:backgroundTint="#243EDF"
        android:onClick="multiPassDisplay"
        android:text="Multiple Pass"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/secondReplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secondPass"
        android:layout_marginTop="10dp"
        android:backgroundTint="#243EDF"
        android:onClick="multiPassReplaceDisplay"
        android:text="Replacement After MultiPass"
        android:textColor="#FFFFFF" />

</RelativeLayout>

