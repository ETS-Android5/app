<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:textSize="15dp" />

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:gravity="end"
                    android:text="Window Size (in pixels) : " />

                <EditText
                    android:id="@+id/windowSize"
                    android:hint=""
                    android:inputType="number" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:gravity="end"
                    android:text="Overlap (in pixels): " />

                <EditText
                    android:id="@+id/overlap"
                    android:hint=""
                    android:inputType="number" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkbox_2"
                    android:onClick="onCheckboxClicked"
                    android:text="Advanced Parameters"/>

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dt_text"
                    android:visibility="gone"
                    android:gravity="end"
                    android:text="dt: " />

                <EditText
                    android:id="@+id/dt"
                    android:visibility="gone"
                    android:hint=""
                    android:inputType="numberDecimal" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nMaxUpper_text"
                    android:visibility="gone"
                    android:gravity="end"
                    android:text="Magnitude Threshold (upper): " />

                <EditText
                    android:id="@+id/nMaxUpper"
                    android:visibility="gone"
                    android:hint=""
                    android:inputType="numberDecimal" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nMaxLower_text"
                    android:visibility="gone"
                    android:gravity="end"
                    android:text="Magnitude Threshold (lower): " />

                <EditText
                    android:id="@+id/nMaxLower"
                    android:visibility="gone"
                    android:hint=""
                    android:inputType="numberDecimal" />

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qMin_text"
                    android:visibility="gone"
                    android:gravity="end"
                    android:text="Minimum Q Threshold: " />

                <EditText
                    android:id="@+id/qMin"
                    android:visibility="gone"
                    android:hint=""
                    android:inputType="numberDecimal" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/E_text"
                    android:visibility="gone"
                    android:gravity="end"
                    android:text="Median Threshold: " />

                <EditText
                    android:id="@+id/E"
                    android:visibility="gone"
                    android:hint=""
                    android:inputType="numberDecimal" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/groupradio_text"
                    android:visibility="gone"
                    android:gravity="end"
                    android:text="Replace Missing Vectors: " />


                <RadioGroup
                    android:id="@+id/groupradio"
                    android:layout_marginLeft="20dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/yesRadio"
                        android:gravity="center"
                        android:text="YES"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        />

                    <RadioButton
                        android:id="@+id/noRadio"
                        android:gravity="center"
                        android:text="NO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />
                </RadioGroup>
            </TableRow>


            <TableRow android:gravity="center_horizontal">

                <Button
                    android:id="@+id/button_cancel_piv_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    android:backgroundTint="#243EDF"
                    android:textColor="#FFFFFF"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="20dp"/>


                <Button
                    android:id="@+id/button_save_piv_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Values"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    android:backgroundTint="#243EDF"
                    android:textColor="#FFFFFF"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="20dp"/>

            </TableRow>
        </TableLayout>

    </LinearLayout>
</ScrollView>