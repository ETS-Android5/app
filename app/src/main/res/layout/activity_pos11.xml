<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Learn.Pos11_Activity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="7.5dp"
        android:layout_marginBottom="60dp"
        android:scrollbarStyle="outsideInset"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pos11TextView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/pos11TextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@+id/pos11TextView0"
                tools:ignore="MissingConstraints" />

            <com.zolad.zoominimageview.ZoomInImageView
                android:id="@+id/pos11ImageView0"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/pos11TextView1"
                android:src="@drawable/bernoulli_eq1"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/pos11TextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@+id/pos11ImageView0"
                tools:ignore="MissingConstraints" />

            <com.zolad.zoominimageview.ZoomInImageView
                android:id="@+id/pos11ImageView1"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:layout_below="@id/pos11TextView2"
                android:src="@drawable/bernoulli_eq2"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/pos11TextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@+id/pos11ImageView1"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/pos11TextView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@+id/pos11TextView3"
                tools:ignore="MissingConstraints" />

            <com.zolad.zoominimageview.ZoomInImageView
                android:id="@+id/pos11ImageView2"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layout_below="@id/pos11TextView4"
                android:src="@drawable/bernoulli_image"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/pos11TextView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@+id/pos11ImageView2"
                tools:ignore="MissingConstraints" />

            <com.zolad.zoominimageview.ZoomInImageView
                android:id="@+id/pos11ImageView3"
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:layout_below="@id/pos11TextView5"
                android:src="@drawable/bernoulli_eq3"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/pos11TextView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@+id/pos11ImageView3"
                tools:ignore="MissingConstraints" />

            <com.zolad.zoominimageview.ZoomInImageView
                android:id="@+id/pos11ImageView4"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_below="@id/pos11TextView6"
                android:src="@drawable/bernoulli_eq4"
                tools:ignore="MissingConstraints" />

        </RelativeLayout>

    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation2"
        app:itemBackground="@android:color/white" />

</RelativeLayout>