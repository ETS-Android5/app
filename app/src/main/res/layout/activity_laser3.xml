<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Learn.Laser3">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="7.5dp"
        android:layout_marginBottom="60dp"
        android:scrollbarStyle="outsideInset"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/laserSafetyTextView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/laserSafetyTextView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@id/laserSafetyTextView0"
                tools:ignore="MissingConstraints" />

            <com.zolad.zoominimageview.ZoomInImageView
                android:id="@+id/laserSafety3"
                android:layout_width="match_parent"
                android:layout_height="325dp"
                android:layout_below="@id/laserSafetyTextView4"
                android:src="@drawable/lasersafety_cautions"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/laserSafetyTextView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@id/laserSafety3"
                tools:ignore="MissingConstraints" />

            <com.zolad.zoominimageview.ZoomInImageView
                android:id="@+id/laserSafety4"
                android:layout_width="match_parent"
                android:layout_height="278dp"
                android:layout_below="@id/laserSafetyTextView5"
                android:src="@drawable/lasersafety_classtable"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/laserSafetyTextView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@id/laserSafety4"
                tools:ignore="MissingConstraints" />

            <com.zolad.zoominimageview.ZoomInImageView
                android:id="@+id/laserSafety5"
                android:layout_width="281dp"
                android:layout_height="257dp"
                android:layout_below="@id/laserSafetyTextView6"
                android:src="@drawable/lasersafety_donotlook"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/laserSafetyTextView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@id/laserSafety5"
                tools:ignore="MissingConstraints" />

        </RelativeLayout>
    </ScrollView>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation2"
        app:itemBackground="@android:color/white"
        />


</RelativeLayout>